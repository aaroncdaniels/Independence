@using System.Web.Optimization

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Rachel Watson Makeup</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row center logo">
        <a href="home">
            <img src="~/Content/images/logo.png" class="img-responsive" alt="Rachel Watson Makeup Artistry" />
        </a>
    </div>
    <div id="content">
        <div class="container">
            <div id="navbar" class="row">
                <ul class="nav nav-justified">
                    <li><a href="home">Home</a></li>
                    <li><a href="about">About</a></li>
                    <li><a href="services">Services</a></li>
                    <li><a href="portfolio">Portfolio</a></li>
                    <li><a href="contact">Contact</a></li>
                </ul>
            </div>
            <div id="page" class="row">
                @RenderBody()
            </div>
        </div>
    </div>
    <div id="footer">
        <div class="container">
            <div class="row">
                <div id="footer-left" class="col-md-6">
                    <span>&copy; Rachel Watson @System.DateTime.Now.Year.ToString()</span>
                </div>
                <div id="footer-right" class="col-md-6">
                    <span>Design by Kelly Daniels</span>
                </div>
            </div>
        </div>
    </div>
    <!-- /container -->
    @Scripts.Render("~/bundles/scripts")
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</body>
</html>
